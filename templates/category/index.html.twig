{% extends 'base.html.twig' %}

{% block title %}Séries par catégories
{% endblock %}

{% block body %}
	<h1>Retrouvez toutes vos séries par catégories :

		{% for category in categories %}
			<a href="{{ path("category_show", { name: category.name }) }}">
				<h2>{{ loop.index }}
					-
					{{ category.name }}</h2>
			</a>
		{% else %}
			Aucune catégorie trouvée.
		{% endfor %}

		<a href="{{ path('app_index') }}">
			<button class="button">
				Retour à l'accueil</button>
		</a>
	{% endblock %}
