{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block body %}
	<h1>Retrouvez toutes vos séries :
	</h1>

	{% for program in programs %}
		<div class="programs-list">
			<div class="media">
				<h2>{{ loop.index }}
					/
					{{ program.title }}
					- Catégorie :
					{{ program.category.name }}</h2>
				<p>{{ program.summary }}</p>
				<a href="{{ path("program_show", { id: program.id }) }}">
					<button class="button">Voir la fiche
					</button>
				</a>
			</div>
		{% else %}
			Aucune série trouvée.
		{% endfor %}

		<a href="{{ path('app_index') }}">
			<button class="button">
				Retour à l'accueil</button>
		</a>
	{% endblock %}
