{% extends 'base.html.twig' %}

{% block title %}Filmographie
{% endblock %}

{% block body %}
	<h1>Actor</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Nom</th>
				<td>{{ actor.name }}</td>
			</tr>
			<tr>
				<th>Séries</th>
				<td>
					{% for program in actor.programs %}
						<li>
							<a href="{{ path("program_show", { slug: program.slug }) }}">{{ program.title }}</a>
						</li>
					{% else %}
						<li>Aucune série pour cet acteur</li>
					{% endfor %}
				</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('actor_index') }}">back to list</a>
{% endblock %}
