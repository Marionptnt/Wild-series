{% extends 'base.html.twig' %}

{% block title %}Episode index
{% endblock %}

{% block body %}
	<h1>Episode index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Numéro</th>
				<th>Titre de l'épisode</th>
				<th>Résumé</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for episode in episodes %}
				<tr>
					<td>{{ episode.number }}</td>
					<td>{{ episode.title }}</td>
					<td>{{ episode.synopsis }}</td>
					<td>
						<a href="{{ path('episode_show', {'slug': episode.slug}) }}">voir</a>
						<a href="{{ path('episode_edit', {'slug': episode.slug}) }}">modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Pas d'épisodes trouvés</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('episode_new') }}">Ajouter un épisode</a>
{% endblock %}
